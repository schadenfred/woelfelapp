= form_for @practice_locale do |f|
  - if @practice_locale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@practice_locale.errors.count, "error")} prohibited this practice_locale from being saved:"
      %ul
        - @practice_locale.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address_id
    = f.number_field :address_id
  .actions
    = f.submit 'Save'
